extends ../../layouts/default

block main
    h3= mode==='create' ? 'Thêm chương' : 'Sửa chương'
    form(method="post" action=( mode==='create'
        ? `${prefixAdmin}/courses/${courseId}/sections`
        : `${prefixAdmin}/sections/${section._id}?_method=PUT`)
    )
        .mb-3
        label.form-label Tiêu đề
        input.form-control(type="text" name="title" required value=section.title || '')
        .mb-3
        label.form-label Tóm tắt
        textarea.form-control(name="summary" rows="3")= section.summary || ''
        .d-flex.gap-2
        button.btn.btn-primary(type="submit") Lưu
        a.btn.btn-light(href=`${prefixAdmin}/courses/${mode==='create' ? courseId : section.course}/content`) Hủy
